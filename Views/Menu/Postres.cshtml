@model IEnumerable<HarryPotter.Models.Food>
@{
    ViewData["Title"] = "Postres";
}

<div class="container">
    <div class=row>
        <div class="col-12 d-flex justify-content-center mt-3">
            <h2 class="titulo">Postres</h2>
        </div>
        <div class="col-12 d-flex justify-content-center">
            <div class="titulo-divisor"></div>>
        </div>

    </div>
    <div class="row">
        @if(Model.Count()>0){
            @foreach (var food in Model.OrderBy(o => o.Id))
            {
                @if(food.Category.Nombre=="Postres"){
                    <div class="col-sm-12 col-md-4">

                    <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="\@food.UrlImage" >
                <div class="card-body">
                    <h5 class="card-title">@food.Nombre</h5>
                   </div>
                <ul class="list-group list-group-flush">
                    
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.Description):@food.Description</li>
                    <li class="list-group-item">@Html.DisplayNameFor(model => model.Precio):@food.Precio</li>
                </ul>
                </div>   
                </div>

                }
                
                    
            }
        }
    </div>

</div>